<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtaikhoan"
    tools:context=".Activity.DoiMatKhau">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="326dp"
        android:layout_height="159dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="FAST"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#B22222"
        android:textSize="90sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/edtMatKhauCu"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:ems="10"
        android:hint="MẬT KHẨU CŨ"
        android:inputType="textPersonName|textPassword"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edtMatKhauMoi1"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="131dp"
        android:ems="10"
        android:hint="MẬT KHẨU MỚI"
        android:inputType="textPersonName|textPassword"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edtMatKhauMoi2"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="NHẬP LẠI MK MỚI"
        android:inputType="textPersonName|textPassword"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnDongYDMK"
        android:layout_width="321dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="ĐỒNG Ý" />

</RelativeLayout>