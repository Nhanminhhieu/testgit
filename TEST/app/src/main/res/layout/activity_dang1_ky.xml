<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtaikhoan"
    tools:context=".Activity.DangKy">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="326dp"
        android:layout_height="159dp"
        android:layout_centerHorizontal="true"
        android:text="FAST"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#B22222"
        android:textSize="90sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/edtTaiKhoanDK"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="TÀI KHOẢN"
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edtMatKhauDK"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:ems="10"
        android:hint="MẬT KHẨU"
        android:inputType="textPersonName|textPassword"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edtSDTDK"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMatKhauDK"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="SỐ ĐIỆN THOẠI"
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edtEmailDK"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSDTDK"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnDangKy"
        android:layout_width="321dp"
        android:layout_height="37dp"
        android:layout_below="@+id/edtEmailDK"
        android:layout_centerHorizontal="true"
        android:text="Đăng Ký" />

</RelativeLayout>